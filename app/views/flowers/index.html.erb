<h1>Flower Shop</h1>

<table class="table table-hover table-bordered">
  <thead class="table table-secondary">
    <tr>
      <th>Flower name</th>
      <th>Available quantity</th>
      <th>Flower price</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @flowers.each do |flower| %>
      <tr>
        <td><%= flower.name %></td>
        <td><%= flower.qty %> pieces</td>
        <td>â‚± <%= flower.price %></td>
        <td><%= link_to 'Edit', edit_flower_path(flower),
          class:"btn btn-sm btn-outline-info" %> 
        <%= link_to 'Delete', flower_path(flower),
          method: :delete,
          class:"btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add flower', new_flower_path, class:"btn btn-sm btn-outline-success" %>
<%= link_to 'Home', root_path, class:"btn btn-sm btn-outline-secondary" %>
